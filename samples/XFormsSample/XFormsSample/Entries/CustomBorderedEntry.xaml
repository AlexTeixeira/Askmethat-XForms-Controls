<?xml version="1.0" encoding="UTF-8"?>
<ContentPage  Title="Bottom Border Entry"
 BackgroundColor="Black" xmlns:controls="clr-namespace:Askmethat.XForms.Controls.Entries;assembly=Askmethat.XForms.Controls" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="XFormsSample.Entries.CustomBorderedEntry">
	<ContentPage.Content>
         <StackLayout Padding="40"  VerticalOptions="CenterAndExpand" BackgroundColor="Black">
            <controls:AmcBottomBorderEntry 
                x:Name="MyEntry"
                LineColor="White" 
                TextColor="White" 
                Placeholder="My Super Entry"
                BackgroundColor="Navy"
                HorizontalOptions="FillAndExpand"
                /> 

            <Button Text="Change Font Size" Clicked="Handle_Clicked" ></Button>
    </StackLayout>
	</ContentPage.Content>
</ContentPage>
